local KavoUI = {}

-- Services
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Create main library
function KavoUI:CreateLib(title, theme)
    local Library = {}
    
    -- ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "KavoLibrary"
    ScreenGui.Parent = PlayerGui

    -- Main Frame
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = theme.Background
    MainFrame.Size = UDim2.new(0, 500, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
    MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    MainFrame.BorderSizePixel = 0
    MainFrame.Visible = true

    -- Title Bar
    local TitleBar = Instance.new("Frame")
    TitleBar.Name = "TitleBar"
    TitleBar.Parent = MainFrame
    TitleBar.BackgroundColor3 = theme.Header
    TitleBar.Size = UDim2.new(1, 0, 0, 30)
    TitleBar.BorderSizePixel = 0

    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Parent = TitleBar
    Title.Text = title
    Title.Size = UDim2.new(1, 0, 1, 0)
    Title.TextColor3 = theme.TextColor
    Title.TextSize = 18
    Title.Font = Enum.Font.GothamBold
    Title.BackgroundTransparency = 1

    -- Enable dragging
    local function EnableDragging(frame)
        local dragging = false
        local dragStart, startPos
        frame.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                dragging = true
                dragStart = input.Position
                startPos = frame.Position
            end
        end)
        frame.InputChanged:Connect(function(input)
            if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                local delta = input.Position - dragStart
                frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
            end
        end)
        frame.InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                dragging = false
            end
        end)
    end
    EnableDragging(MainFrame)

    Library.MainFrame = MainFrame
    return Library
end

-- Tab Creation
function KavoUI:NewTab(Library, tabName)
    local Tab = {}
    
    -- Tab Button (For tab switching UI)
    -- Placeholder logic for tabs to be created here.

    return Tab
end

-- Add Button
function KavoUI:NewButton(Tab, text, callback)
    local Button = Instance.new("TextButton")
    Button.Name = text
    Button.Parent = Tab
    Button.Size = UDim2.new(0, 200, 0, 30)
    Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Button.Text = text
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.TextSize = 14
    Button.Font = Enum.Font.Gotham
    Button.MouseButton1Click:Connect(callback)
    return Button
end

-- Add Toggle
function KavoUI:NewToggle(Tab, text, callback)
    local Toggle = Instance.new("TextButton")
    Toggle.Name = text
    Toggle.Parent = Tab
    Toggle.Size = UDim2.new(0, 200, 0, 30)
    Toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Toggle.Text = text .. " [OFF]"
    Toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    Toggle.TextSize = 14
    Toggle.Font = Enum.Font.Gotham

    local State = false
    Toggle.MouseButton1Click:Connect(function()
        State = not State
        Toggle.Text = text .. (State and " [ON]" or " [OFF]")
        callback(State)
    end)

    return Toggle
end

return KavoUI
